{
  "name": "localized-time",
  "version": "0.1.0",
  "description": "Timezone-aware formatting and display engine with UI components",
  "type": "module",
  "main": "./dist/core/index.js",
  "types": "./dist/core/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./web": {
      "types": "./dist/web/index.d.ts",
      "import": "./dist/web/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run build.ts",
    "build:demo": "bun run build.ts --demo",
    "dev": "bun run --watch demo/dev-server.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/react": "19",
    "@types/react-dom": "^19.2.3",
    "happy-dom": "^20.0.11",
    "react": "19",
    "react-dom": "^19.2.3",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "timezone",
    "time",
    "localization",
    "temporal",
    "web-component",
    "react"
  ],
  "license": "Apache-2.0",
  "author": "selesse",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/selesse/localized-time.git"
  },
  "homepage": "https://selesse.github.io/localized-time/",
  "bugs": {
    "url": "https://github.com/selesse/localized-time/issues"
  },
  "dependencies": {
    "temporal-polyfill": "^0.3.0"
  }
}
